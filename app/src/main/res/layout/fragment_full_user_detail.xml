<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FullUserDetailFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/themeSecondaryApp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="100dp"
    android:background="@color/themeSecondaryApp">

    <ImageButton
        android:id="@+id/btnGoBackToDiscoverPage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ic_back_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<androidx.cardview.widget.CardView
    android:id="@+id/cardViewUserImage"
    android:layout_marginTop="20dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    app:layout_constraintTop_toBottomOf="@id/btnGoBackToDiscoverPage"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:cardCornerRadius="20dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:id="@+id/imgViewUserProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_user_profile_sample"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnRightSwipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_highfi"
            app:tint = "@color/white"
            app:fabCustomSize="48dp"
            android:visibility="gone"
            android:outlineAmbientShadowColor="@color/themeApp"
            app:maxImageSize="24dp"
            app:borderWidth="0dp"
            app:elevation="5dp"
            android:backgroundTint="@color/themeApp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUserNameDetailPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ayush Yadav"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/cardViewUserImage"
        />

    <TextView
        android:id="@+id/tvUserEmail"
        app:layout_constraintHorizontal_bias="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: username@gmail.com"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/newBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserNameDetailPage"
        />

    <TextView
        android:id="@+id/tvUserCollegeStream"
        app:layout_constraintHorizontal_bias="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stream: IT"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/newBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserEmail"
        />
    <TextView
        android:id="@+id/tvUserCollegeYear"
        app:layout_constraintHorizontal_bias="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year: 3"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/newBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserCollegeStream"
        />
    <TextView
        android:id="@+id/tvUserCollegeName"
        app:layout_constraintHorizontal_bias="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College: JEC, Jabalpur"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/newBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserCollegeYear"
        />




    <TextView
        android:id="@+id/tvAboutMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserCollegeName"
        />

    <TextView
        android:id="@+id/tvUserBioDetailPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I don’t know what to write right now so i’m just
typing random, LBC is my word by the way"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvAboutMe"
        />


    <TextView
        android:id="@+id/tvSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Skills"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUserBioDetailPage" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/skillsChipGroup"
        style="@style/TagChipStyle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@id/tvInterests"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSkills" />

    <TextView
        android:id="@+id/tvInterests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Interests"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skillsChipGroup" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/interestsChipGroup"
        style="@style/TagChipStyle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:clickable="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInterests" />

<!--        </androidx.constraintlayout.widget.ConstraintLayout>-->
<!--    </ScrollView>-->

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
