<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.EditSkillsFragment">


    <TextView
        android:id="@+id/tvPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="28sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Edit Skills"/>

    <TextView
        android:id="@+id/tvPageDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/gray70"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPageTitle"
        android:text="Enter Your Skills"/>

    <EditText
        android:id="@+id/etvUserSkills"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Write Your Skills here"
        app:layout_constraintVertical_bias="0"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColorHint="@color/myGray"
        app:layout_constrainedHeight="true"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnSaveSkills"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvPageDescription"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSaveSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/themeApp"
        android:outlineAmbientShadowColor="@color/themeApp"
        android:src="@drawable/ic_baseline_add_24"
        app:borderWidth="0dp"
        app:elevation="2dp"
        app:fabCustomSize="36dp"
        app:layout_constraintBottom_toBottomOf="@id/etvUserSkills"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@id/etvUserSkills"
        app:maxImageSize="24dp"
        app:tint="@color/white" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/skillsChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etvUserSkills"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        style="@style/TagChipStyle1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save All Skills"
        android:id="@+id/btnSaveAllSkills"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skillsChipGroup"/>
</androidx.constraintlayout.widget.ConstraintLayout>