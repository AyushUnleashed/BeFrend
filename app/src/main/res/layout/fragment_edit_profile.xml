<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EditProfileFragment"
    android:background="@color/themeSecondaryApp">



    <TextView
        android:id="@+id/tvPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="28sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:text="Edit Profile"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/userImage"
        android:layout_marginTop="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPageTitle" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/userImage"
        app:layout_constraintBottom_toBottomOf="@id/userImage"
        app:layout_constraintLeft_toLeftOf="@id/userImage"
        app:layout_constraintRight_toRightOf="@id/userImage"
        android:visibility="gone">
    </ProgressBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEditImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_image"
        app:tint = "@color/themeApp"
        app:fabCustomSize="36dp"
        android:outlineAmbientShadowColor="@color/themeApp"
        app:maxImageSize="36dp"
        app:borderWidth="0dp"
        app:elevation="5dp"
        android:backgroundTint="#00433831"
        app:layout_constraintEnd_toEndOf="@id/userImage"
        app:layout_constraintBottom_toBottomOf="@id/userImage"
        />


    <EditText
        android:id="@+id/etvUserNameEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayush Yadav"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/userImage"
        />

    <TextView
        android:id="@+id/tvAboutMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/etvUserNameEditProfile"
        />

    <EditText
        android:id="@+id/etvUserBioEditBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I don’t know what to write right now so i’m just
typing random, LBC is my word by the way"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvAboutMe"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSaveProfileDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tick"
        app:tint = "@color/white"
        app:fabCustomSize="72dp"
        android:layout_margin="20dp"
        android:outlineAmbientShadowColor="@color/themeApp"
        app:maxImageSize="36dp"
        app:borderWidth="0dp"
        app:elevation="5dp"
        android:backgroundTint="@color/themeApp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>