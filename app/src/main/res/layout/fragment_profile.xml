<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <!--Swipe Refresh Layout -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="28sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Profile"/>

            <Button
                android:visibility="gone"
                android:textColor="@color/themeApp"
                android:text="Utility"
                android:elevation="10dp"
                app:iconTint = "@color/themeApp"
                android:id="@+id/btnGoToUtility"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                app:cornerRadius="10dp"
                android:drawableTint="@color/themeApp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toEndOf="@id/tvPageTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/tvPageTitle"
                app:layout_constraintBottom_toBottomOf="@id/tvPageTitle"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/userImage"
        android:layout_marginTop="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPageTitle"
        app:layout_constraintBottom_toTopOf="@id/tvUserName"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        android:maxLines="1"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:flow_horizontalBias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userImage"
        android:text="Ayush Yadav"
        android:ellipsize="end"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/tvUserEmail"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: username@gmail.com"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/newBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        />

            <TextView
                android:id="@+id/tvUserCollegeStream"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IT"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="12dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/newBlack"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvUserEmail"
                />

            <TextView
                android:id="@+id/tvUserCollegeYear"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3rd Year"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/newBlack"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvUserCollegeStream"
                />

            <TextView
                android:id="@+id/tvUserCollegeName"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JEC, Jabalpur"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/newBlack"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvUserCollegeYear"
                />

    <TextView
        android:id="@+id/tvUserBio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUserCollegeName"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/btnEditProfile"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAlignment="center"
        android:text="No BIO"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:drawableEnd="@drawable/ic_edit_image"
        android:id="@+id/btnEditProfile"
        android:textColor="@color/themeApp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/btnLogout"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:drawableEnd="@drawable/ic_log_out"
        android:id="@+id/btnLogout"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="50dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>