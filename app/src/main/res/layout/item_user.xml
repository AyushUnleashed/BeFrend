<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    app:cardElevation="0dp"
    android:id="@+id/myCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageView
            android:id="@+id/imgViewUserProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_user_profile_sample" />

        <ImageView
            android:id="@+id/imgCollegeYear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bi_1_circle_fill" />

        <androidx.cardview.widget.CardView
            android:layout_margin="12dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/cardViewProfileDescription"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/white50">

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/blurView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="18dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Ayush Yadav don’t know what to write right now so i’m just
typing random, LBC is my wI don’t know what to write right now so i’m just
typing random, LBC is my wI don’t know what to write right now so i’m just
typing random, LBC is my wI don’t knoat to write right now so i’m just
typing random, LBC is my w"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:flow_horizontalBias="0"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/userCardChipGroup"
                    style="@style/TagChipStyle1"
                    app:layout_constraintHeight_max="40dp"
                    app:layout_constrainedHeight="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="20dp"
                    android:clickable="false"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvUserName" />

                <TextView
                    android:id="@+id/tvUserBioDetailPage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Interested in Softwarr we Developement, I Try to Expose Myself to new Things, I like MultiLingual Songs btw."
                    android:textColor="@color/white"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/userCardChipGroup"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:flow_verticalBias="0"
                    app:layout_constraintVertical_bias="0"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/btnShowFullProfile"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageButton
                    android:id="@+id/btnShowFullProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ic_chevron_down"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvUserName" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            </eightbitlab.com.blurview.BlurView>

        </androidx.cardview.widget.CardView>







    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>