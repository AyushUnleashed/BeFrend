<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CreditsFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/themeSecondaryApp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            android:background="@color/themeSecondaryApp">

            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/ic_top_ellipse_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />



            <ImageButton
                android:id="@+id/btnGoBackToDiscoverPage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_back_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/btnGoBackToDiscoverPage"
                android:textSize="28sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/newBlack"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Credits"/>

            <TextView
                android:id="@+id/tvPageDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/newBlack"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPageTitle"
                android:text="Thanks for using our App"/>


            <ImageView
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:background="@drawable/ic_background_square"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardViewUserImage1"
                app:layout_constraintBottom_toBottomOf="@id/cardViewUserImage1"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewUserImage1"
                android:layout_marginTop="64dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toBottomOf="@id/tvPageDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="20dp"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView

                        android:id="@+id/imgViewUserProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_user_profile_sample"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvName1CreditsPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AYUSH YADAV"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="32dp"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/cardViewUserImage1"
                />

            <TextView
                android:id="@+id/tvPosition1CreditsPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Architect of this app :)"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/gray70"
                app:layout_constraintLeft_toLeftOf="parent"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvName1CreditsPage"
                />


            <ImageView
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:background="@drawable/ic_background_square"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardViewUserImage2"
                app:layout_constraintBottom_toBottomOf="@id/cardViewUserImage2"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewUserImage2"
                android:layout_marginTop="64dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toBottomOf="@id/tvPosition1CreditsPage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="20dp"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView

                        android:id="@+id/imgViewUserProfile2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/profile_image_yogi"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvName2CreditsPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YOGENDRA MANAWAT"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="32dp"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/cardViewUserImage2"
                />

            <TextView
                android:id="@+id/tvPosition2CreditsPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UI/UX Designer"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/gray70"
                app:layout_constraintLeft_toLeftOf="parent"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvName2CreditsPage"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>